@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="MainController">

    <div class="row">
        <div class="col-md-4">
            {{message}}
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        </div>
    </div>

    <div ng-show="error" style="color:red;font-size:large;" class="row">
        {{error}}
    </div>

    <div class="row">
       
        <form>
            <input type="search" ng-model="username" placeholder="Find on Github..." />
            <input type="submit" ng-click="Search(username)" value="Search" />

        </form>
        <div>
            Name: {{username}}
        </div>
        <img ng-show="user" ng-src="{{user.avatar_url}}" />
    </div>



</div>